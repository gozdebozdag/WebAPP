@model List<DemoApi.Models.Markalar>

<h2>Gruplar</h2>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col">MarkaId</th>
            <th scope="col">Marka</th>
            <th scope="col">Güncelle</th>
            <th scope="col">Sil</th>
            <th scope="col">Detay</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var marka in Model)
        {
            <tr>
                <td>@marka.MarkaId</td>
                <td>@marka.Marka</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="@Url.Action("MarkaDuzenle", "Marka", new { id = marka.MarkaId })">Güncelle</a>
                </td>
                <td>
                    <a class="btn btn-primary btn-sm" href="@Url.Action("MarkaSil", "Marka", new { id = marka.MarkaId })">Sil</a>
                </td>
                <td>
                    <a class="btn btn-primary btn-sm" href="@Url.Action("MarkaDetay", "Marka", new { id = marka.MarkaId })">Detay</a>
                </td>
            </tr>
        }
    </tbody>
</table>
