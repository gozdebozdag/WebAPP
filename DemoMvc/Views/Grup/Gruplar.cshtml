@model List<DemoApi.Models.UrunGruplari>

<h2>Gruplar</h2>



<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>GrupId</th>
            <th>Grup</th>
            <th scope="col">Güncelle</th>
            <th scope="col">Sil</th>
            <th scope="col">Detay</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var grup in Model)
        {
            <tr>
                <td>@grup.GrupId</td>
                <td>@grup.Grup</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="@Url.Action("GrupDuzenle", "Grup", new { id = grup.GrupId })">Güncelle</a>
                </td>
                <td>
                    <a class="btn btn-primary btn-sm" href="@Url.Action("GrupSil", "Grup", new { id = grup.GrupId })">Sil</a>
                </td>
                <td>
                    <a class="btn btn-primary btn-sm" href="@Url.Action("GrupDetay", "Grup", new { id = grup.GrupId })">Detay</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-primary mb-3" href="@Url.Action("YeniGrup", "Grup")">Yeni Grup Ekle</a>