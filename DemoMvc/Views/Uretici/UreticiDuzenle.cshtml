@using DemoApi.Models
@model DemoApi.Models.UrunUretici

<h1>Üretici Düzenle</h1>
<form id="ureticiDuzenleForm">
    <input type="hidden" id="UreticiId" name="UreticiId" value="@Model.UreticiId" />
    <table class="table">
        <tr>
            <td>
                <label for="Uretici">Üretici:</label>
            </td>
            <td>
                <input type="text" id="Uretici" name="Uretici" value="@Model.Uretici" class="form-control" />
            </td>
        </tr>
        <tr>
            <td colspan="2" class="text-center">
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </td>
        </tr>
    </table>
</form>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $('#ureticiDuzenleForm').on('submit', function (event) {
            event.preventDefault();

            var formData = {
                UreticiId: $('#UreticiId').val(),
                Uretici: $('#Uretici').val()
            };

            $.ajax({
                url: '/Uretici/UreticiDuzenle/' + formData.UreticiId,
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(formData),
                success: function (response) {
                    // Success handler
                    console.log(response);
                    window.location.href = '/Uretici/Ureticiler'; // Redirect on success
                },
                error: function (error) {
                    // Error handler
                    console.error(error);
                }
            });
        });
    });
</script>

<a href="@Url.Action("Ureticiler")" class="btn btn-secondary mt-3">Geri</a>
