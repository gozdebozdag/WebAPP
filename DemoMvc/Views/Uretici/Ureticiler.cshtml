@model List<DemoApi.Models.UrunUretici>

<h2>Üreticiler</h2>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Uretici Id</th>
            <th>Uretici</th>
            <th scope="col">Güncelle</th>
            <th scope="col">Sil</th>
            <th scope="col">Detay</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var uretici in Model)
        {
            <tr>
                <td>@uretici.UreticiId</td>
                <td>@uretici.Uretici</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="@Url.Action("UreticiDuzenle", "Uretici", new { id = uretici.UreticiId })">Güncelle</a>
                </td>
                <td>
                    <a class="btn btn-primary btn-sm" href="@Url.Action("UreticiSil", "Uretici", new { id = uretici.UreticiId })">Sil</a>
                </td>
                <td>
                    <a class="btn btn-primary btn-sm" href="@Url.Action("UreticiDetay", "Uretici", new { id = uretici.UreticiId })">Detay</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-primary mb-3" href="@Url.Action("YeniUretici", "Uretici")">Yeni Üretici Ekle</a>