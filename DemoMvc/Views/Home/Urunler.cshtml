@using DemoApi.Models
@model List<Urunler>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col">UrunId</th>
            <th scope="col">MarkaId</th>
            <th scope="col">GrupId</th>
            <th scope="col">UreticiId</th>
            <th scope="col">UrunKodu</th>
            <th scope="col">UrunAdi</th>
            <th scope="col">Güncelle</th>
            <th scope="col">Detay</th>
            <!-- Diğer sütunlar -->
        </tr>
    </thead>
    <tbody>
        @foreach (var urun in Model)
        {
            <tr>
                <td>@urun.UrunId</td>
                <td>@urun.MarkaId</td>
                <td>@urun.GrupId</td>
                <td>@urun.UreticiId</td>
                <td>@urun.UrunKodu</td>
                <td>@urun.UrunAdi</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="@Url.Action("UrunDuzenle", "Home", new { id = urun.UrunId })">Güncelle</a>
                </td>
                <td>
                    <a class="btn btn-primary btn-sm" href="@Url.Action("UrunDetay", "Home", new { id = urun.UrunId })">Detay</a>
                </td>
                <!-- Diğer sütunlar -->
            </tr>
        }
    </tbody>
</table>
